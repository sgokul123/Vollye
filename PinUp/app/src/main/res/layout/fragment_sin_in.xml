<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_signin"
    android:background="@color/back_front_color"
    tools:context="com.pinup.pinup.view.fragment.SignIn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dimen_align_30dp"
            android:layout_marginRight="@dimen/dimen_align_30dp"
            android:layout_marginTop="@dimen/dimen_align_60dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView_main"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/pinup" />

            <TextView
                android:id="@+id/textView_pinup_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/imageView_main"
                android:layout_marginTop="@dimen/dimen_align_10dp"
                android:text="PinUp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_size_30sp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/textview_register_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_registration"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_align_20dp"
            android:text="Admin Registration"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_size_20sp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           android:layout_marginLeft="@dimen/dimen_align_30dp"
            android:layout_marginRight="@dimen/dimen_align_30dp"
            android:layout_below="@+id/textview_register_admin"
            >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edittext_signin_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/dimen_align_10dp"
                    android:textColor="@android:color/white"
                    android:hint="Email"

                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/edittext_signin_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_align_10dp"
                    android:textColor="@android:color/white"
                    android:hint="Password"

                    />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
           android:layout_above="@+id/layout_button_sign"
            android:background="@color/back_saperator_fent"
            />
        <LinearLayout
            android:id="@+id/layout_button_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
            android:id="@+id/button_signin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/back_front_color"
                android:textColor="@android:color/white"
            android:text="Signin"/>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
