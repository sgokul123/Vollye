<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_layout"
    android:layout_height="match_parent"
    android:background="@color/back_front_color"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dimen_align_30dp"
            android:layout_marginRight="@dimen/dimen_align_30dp"
            android:layout_marginTop="@dimen/dimen_align_60dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView_main"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/pinup" />

            <TextView
                android:id="@+id/textView_pinup_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/imageView_main"
                android:layout_marginLeft="@dimen/dimen_align_10dp"
                android:layout_marginTop="@dimen/dimen_align_10dp"
                android:text="PinUp"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/dimen_size_30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_main_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_align_30dp"
            android:text="Welcome to PinUp"
            android:textAlignment="center"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/dimen_size_20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_main_welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_align_40dp"
            android:text="All you resources, important links,\n emails,docs,notes,in,one place and\n  easy to create Pin."
            android:textAlignment="center"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/dimen_size_20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/back_saperator_fent"
        android:layout_above="@+id/layout2_main_welcome"
        />
        <LinearLayout
            android:id="@+id/layout2_main_welcome"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            >

            <Button
                android:id="@+id/button_main_registration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/back_front_color"
                android:text="Register" />

            <View
                android:layout_width="1.5dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/back_saperator_fent"

                />


            <Button
                android:id="@+id/button_main_signin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/back_front_color"
                android:text="Signin" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
